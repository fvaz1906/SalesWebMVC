@model SalesWebMVC.Models.Seller
@{
    ViewData["Title"] = "Vende";
}

<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-gray-800">@ViewData["Title"]</h1>
    <a asp-action="Index" class="d-none d-sm-inline-block btn btn-sm btn-primary shadow-sm">
        <i class="fas fa-download fa-sm text-white-50"></i> Back to List
    </a>
</div>

<div class="alert alert-danger" role="alert">
    Tem certeza que deseja remover o departamento?
    <br />Name: <strong>@Html.DisplayFor(model => model.Name)</strong>
    <br />Email: <strong>@Html.DisplayFor(model => model.Email)</strong>
    <br />BirthDate: <strong>@Html.DisplayFor(model => model.BirthDate)</strong>
    <br />BaseSalary: <strong>@Html.DisplayFor(model => model.BaseSalary)</strong>
</div>
<div>
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" />
    </form>
</div>
